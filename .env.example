# Medical Records Management System - Development Environment Configuration

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEBUG=true
APP_NAME="Medical Records Management System"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For development (SQLite)
#DATABASE_URL=sqlite:///./medical_records.db

# For production (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/medical_records

# For MySQL (alternative)
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/medical_records

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=dev_secret_key_change_in_production
ALGORITHM=HS256

# =============================================================================
# TOKEN SETTINGS
# =============================================================================
ACCESS_TOKEN_EXPIRE_MINUTES=480

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_DIR=./logs
LOG_RETENTION_DAYS=180