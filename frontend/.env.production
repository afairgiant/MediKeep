# React Environment Variables
# API URL for the FastAPI backend - Use relative path for production
# This allows the frontend to work both in Docker and standalone deployments
REACT_APP_API_URL=/api/v1

# App Name
REACT_APP_NAME=Medical Records System

# ESLint configuration for CI builds
# Disable treating warnings as errors in production builds
ESLINT_NO_DEV_ERRORS=true
DISABLE_ESLINT_PLUGIN=false

# Build Configuration
ESLINT_NO_DEV_ERRORS=true
GENERATE_SOURCEMAP=false
